[*.cs]

# IDE0008: Use explicit type
csharp_style_var_for_built_in_types = true

# IDE0008: Use explicit type
csharp_style_var_when_type_is_apparent = true

# IDE0008: Use explicit type
csharp_style_var_elsewhere = true

# IDE0016: Use 'throw' expression
csharp_style_throw_expression = false

# IDE0160: Convert to block scoped namespace
csharp_style_namespace_declarations = file_scoped


# Code Style: Naming Rules

dotnet_naming_rule.field.severity = suggestion
dotnet_naming_rule.field.symbols = field
dotnet_naming_rule.field.style = field

dotnet_naming_rule.field.severity = suggestion
dotnet_naming_rule.field.symbols = static_readonly_property
dotnet_naming_rule.field.style = pascal_case

dotnet_naming_rule.field.severity = suggestion
dotnet_naming_rule.field.symbols = const
dotnet_naming_rule.field.style = pascal_case

# Code Style: Symbol Groups

dotnet_naming_symbols.field.applicable_kinds = field
dotnet_naming_symbols.field.applicable_accessibilities = *
dotnet_naming_symbols.field.required_modifiers =

dotnet_naming_symbols.static_readonly_property.applicable_kinds = property
dotnet_naming_symbols.static_readonly_property.applicable_accessibilities = *
dotnet_naming_symbols.static_readonly_property.required_modifiers = static,readonly

dotnet_naming_symbols.const.applicable_kinds = field
dotnet_naming_symbols.const.applicable_accessibilities = *
dotnet_naming_symbols.const.required_modifiers = const

# Code Style: Naming Styles

dotnet_naming_style.field.required_prefix = _
dotnet_naming_style.field.required_suffix =
dotnet_naming_style.field.word_separator =
dotnet_naming_style.field.capitalization = pascal_case

dotnet_naming_style.pascal_case.required_prefix =
dotnet_naming_style.pascal_case.required_suffix =
dotnet_naming_style.pascal_case.word_separator =
dotnet_naming_style.pascal_case.capitalization = pascal_case


[*_Tests.cs]

# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = none

# Naming Rule: Test Class

dotnet_naming_rule.method_should_be_test_class.severity = suggestion
dotnet_naming_rule.method_should_be_test_class.symbols = test_class
dotnet_naming_rule.method_should_be_test_class.style = test_class

dotnet_naming_symbols.test_class.applicable_kinds = class
dotnet_naming_symbols.test_class.applicable_accessibilities = public
dotnet_naming_symbols.test_class.required_modifiers =

dotnet_naming_style.test_class.required_prefix =
dotnet_naming_style.test_class.required_suffix = _Tests
dotnet_naming_style.test_class.word_separator =
dotnet_naming_style.test_class.capitalization = pascal_case

# Naming Rule: Test Method

dotnet_naming_rule.method_should_be_test_method.severity = suggestion
dotnet_naming_rule.method_should_be_test_method.symbols = test_method
dotnet_naming_rule.method_should_be_test_method.style = test_method

dotnet_naming_symbols.test_method.applicable_kinds = method
dotnet_naming_symbols.test_method.applicable_accessibilities = public
dotnet_naming_symbols.test_method.required_modifiers =

dotnet_naming_style.test_method.required_prefix =
dotnet_naming_style.test_method.required_suffix =
dotnet_naming_style.test_method.word_separator = _
dotnet_naming_style.test_method.capitalization = pascal_case
